    <RelativeLayout
        android:id="@+id/rl_jobCompanyDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/WhiteColor"
        android:layout_marginTop="1dp"
        android:transitionName="profile">

       <!-- <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:visibility="gone"
            android:layout_alignParentTop="true"/>-->

        <LinearLayout
            android:id="@+id/ll_profilename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="12dp"
            android:paddingRight="0dp"
            android:paddingLeft="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >


                <ImageView
                    android:id="@+id/seekar_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/iv_profilename"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="gone"
                    android:background="@drawable/textdesign"
                    android:gravity="center_horizontal|center_vertical" >
                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_profilename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="top"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:text=""
                        android:layout_toLeftOf="@id/tv_date"
                        android:paddingRight="2dp"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_icon_color_code"
                        android:textSize="13sp"
                        android:layout_marginRight="0dp"
                        android:text="12/05/12"
                        android:layout_toLeftOf="@+id/info_iv"
                        android:paddingTop="2dp"
                        />


                        <TextView
                            android:id="@+id/info_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="#757575"
                            android:text="iv"
                            android:paddingLeft="4dp"
                            android:paddingBottom="0dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:paddingTop="2dp"
                            android:paddingRight="6dp"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_marginTop="2dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/txt_clock_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/font_icon_color_code"
                                android:textSize="14sp"
                                android:layout_marginLeft="10dp"
                                android:paddingBottom="1dp"/>

                            <TextView
                                android:id="@+id/tv_exp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:text=""
                                android:textColor="@color/font_icon_color_code"
                                android:textSize="14sp"
                                android:maxLines="1"
                                android:paddingTop="1dp">
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/txt_location_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/font_icon_color_code"
                                android:textSize="14sp"
                                android:layout_marginTop="0dp"/>

                            <TextView
                                android:id="@+id/tv_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text=""
                                android:textColor="@color/font_icon_color_code"
                                android:textSize="14sp"
                                android:maxLines="1">
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!--<RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:layout_marginBottom="6dp"
                    >

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_icon_color_code"
                        android:textSize="12sp"
                        android:layout_marginRight="20dp"
                        android:text="12/05/12">
                    </TextView>

                    <TextView
                        android:id="@+id/info_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:paddingTop="0dp"
                        android:paddingLeft="5dp"
                        android:layout_toRightOf="@id/tv_date"
                        android:text=""
                        android:paddingRight="4dp"
                        android:layout_marginTop="5dp"/>
                </RelativeLayout>-->
            </LinearLayout>
        </LinearLayout>

        <!--<RelativeLayout
            android:id="@+id/rl_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_profilename"
            android:orientation="horizontal" >

        </RelativeLayout>-->

        <View
            android:id="@+id/saperator_location"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ll_profilename"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/new_separator_color_code" />

        <LinearLayout
            android:id="@+id/ll_work_exp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/saperator_location"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="12dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:orientation="vertical" >

                <!--<TextView
                    android:id="@+id/wrkExperience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/workExperience_lbl"
                    android:textColor="@color/bTextColor09"
                    android:visibility="gone"
                    android:textSize="16sp" >
                </TextView>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <!--
                     <ImageView
                    android:id="@+id/jobImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/jobs" />
                    -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_companyname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/bTextColor09"
                            android:textSize="16sp" >
                        </TextView>

                        <TextView
                            android:id="@+id/tv_designation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/font_icon_color_code"
                            android:textSize="14sp"
                            android:layout_marginTop="0dp">
                        </TextView>

                        <TextView
                            android:id="@+id/tv_exptime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/font_icon_color_code"
                            android:textSize="14sp"
                            android:layout_marginTop="1dp">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/saperator_wrk_exp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ll_work_exp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/new_separator_color_code" />

        <LinearLayout
            android:id="@+id/ll_edu_exp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/saperator_wrk_exp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="14dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:orientation="vertical" >

                <!--<TextView
                    android:id="@+id/expQualification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/education_qualification_lbl"
                    android:textColor="#212121"
                    android:visibility="gone"
                    android:textSize="16sp" >
                </TextView>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_instituteName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#212121"
                            android:textSize="16sp" >
                        </TextView>

                        <TextView
                            android:id="@+id/tv_degree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/font_icon_color_code"
                            android:textSize="14sp"
                            android:layout_marginTop="0dp"/>


                        <TextView
                            android:id="@+id/tv_edu_period"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/font_icon_color_code"
                            android:textSize="14sp"
                            android:layout_marginTop="1dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!--<View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ll_edu_exp"
            android:background="#f7f7f7"
            />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_edu_exp"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:id="@+id/ll_resume_newcandidate"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:background="@drawable/feedback_border">

                <TextView
                    android:id="@+id/txt_resume_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23sp"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    android:textColor="#4e89d7"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="4dp"/>

            <Button
                android:id="@+id/resume_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="0dp"
                android:background="@null"
                android:text="@string/resume_lbl"
                android:textColor="#757575"
                android:textSize="14sp"
                android:textStyle="normal"
                android:layout_toRightOf="@id/txt_resume_icon"
                android:layout_marginRight="10dp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_cover_newcandidate"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/feedback_border">

                <TextView
                    android:id="@+id/txt_cover_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23sp"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/green_clr"
                    android:paddingBottom="4dp"/>
            <Button
                android:id="@+id/cover_letter_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:background="@null"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/cover_letter_lbl"
                android:textColor="#757575"
                android:textSize="14sp"
                android:textStyle="normal"
                android:layout_marginRight="10dp"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <!--</android.support.v7.widget.CardView>-->

</LinearLayout>