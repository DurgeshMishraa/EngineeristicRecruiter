<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_work_exp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_work_exp_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <!-- <ImageView
            android:id="@+id/iv_workImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/jobs"
            /> -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#212121"
                android:textSize="16sp"/>


            <TextView
                android:id="@+id/tv_design"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#757575"
                android:textSize="14sp"
                android:paddingBottom="1dp"/>


            <TextView
                android:id="@+id/tv_exptime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#757575"
                android:text=""
                android:textSize="14sp"
                android:paddingBottom="1dp"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/saperator_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/new_separator_color_code"
